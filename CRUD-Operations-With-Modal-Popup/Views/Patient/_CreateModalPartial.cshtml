@model PatientRecordViewModel

<div class="modal fade" tabindex="-1" id="create">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="createLabel">Create Appointment</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
          
            <form asp-action="Create">
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="FristName">First Name</label>
                        <input asp-for="FristName" class="form-control" />
                        <span asp-validation-for="FristName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DoctorId">Select Doctor</label>
                        <select asp-for="DoctorId" asp-items="ViewBag.Doctors" class="form-control">
                            <option value="">-- Select Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AppointmentDate">Schedule</label>
                        <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <a class="btn btn-danger" asp-action="Index">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
